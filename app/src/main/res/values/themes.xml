<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PracticleTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryTextTextView">@color/black</item>
        <item name="colorSecondaryTextTextView">@color/darkGrey_808080</item>
        <item name="colorPrimaryTextEditText">@color/black_231F20</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/color_selector_dark_grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/lightGrey_F7F7F7</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextAppearance">@style/customTextAppearanceSmall</item>
        <item name="boxCornerRadiusTopStart">@dimen/_6sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_6sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_6sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_6sdp</item>
    </style>

    <style name="customTextAppearanceSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/textSize10Px</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemIconSize">@dimen/_17sdp</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">?attr/colorOnPrimary</item>
        <item name="colorOnSurface">?attr/colorSecondaryTextTextView</item>
        <item name="textAppearanceCaption">@style/secondaryTextView14Px</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/TextAppearance.Widget.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorSurface">@color/lightGrey</item>
        <item name="colorOnSurface">@color/darkGrey_717171</item>
    </style>

    <style name="TextAppearance.Widget.App.TabLayout" parent="secondaryTextView14Px">
        <item name="android:textColor">@color/darkGrey_717171</item>
    </style>
</resources>